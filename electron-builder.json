{
  "appId": "com.otus9051.boo",
  "productName": "Boo",
  "nsis": {
    "include": "static/installer.nsh"
  },
  "generateUpdatesFilesForAllChannels": true,
  "asar": true,
  "directories": {
    "output": "dist",
    "buildResources": "static/icons"
  },
  "files": ["build/**/*", "package.json", "static/**/*"],
  "publish": [
    "github",
    {
      "provider": "snapStore",
      "repo": "boo-browser",
      "channels": ["stable"]
    }
  ],
  "deb": {
    "fpm": ["static/boo.metainfo.xml=/usr/share/metainfo/boo.metainfo.xml"]
  },
  "rpm": {
    "fpm": ["static/boo.metainfo.xml=/usr/share/metainfo/boo.metainfo.xml"]
  },
  "pacman": {
    "fpm": ["static/boo.metainfo.xml=/usr/share/metainfo/boo.metainfo.xml"]
  },
  "linux": {
    "category": "Network",
    "executableName": "boo",
    "desktop": {
      "Comment": "Browse the Web",
      "GenericName": "Internet",
      "StartupNotify": false,
      "Categories": "Internet"
      },
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "pacman",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        }
      ]
  },
  "win": {
    "target": [
      {
        "target": "nsis-web",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "zip",
        "arch": ["x64", "ia32"]
      }
    ]
    "publish": ["github"]
  },
  "mac": {
    "category": "public.app-category.navigation",
    "target": [
      {
        "target": "default",
        "arch": "universal"
      }
    ]
  },
  "fileAssociations": [
    {
      "name": "Document",
      "description": "Boo",
      "role": "Viewer",
      "ext": "html"
    }
  ],
  "protocols": [
    {
      "name": "Boo",
      "role": "Viewer",
      "schemes": ["http", "https"]
    }
  ]
}
